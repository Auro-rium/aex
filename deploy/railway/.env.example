# Shared
AEX_ENV=production
AEX_LOG_LEVEL=INFO
AEX_OTEL_ENABLED=1
AEX_METRICS_ENABLED=1
AEX_METRICS_PATH=/metrics

# Neon
AEX_PG_DSN=postgresql://<user>:<password>@<neon-host>/<db>?sslmode=require
AEX_DB_POOL_MIN=5
AEX_DB_POOL_MAX=50
AEX_DB_CONNECT_TIMEOUT_SECONDS=5
AEX_DB_STATEMENT_TIMEOUT_MS=20000
AEX_DB_LOCK_TIMEOUT_MS=5000

# Redis
AEX_REDIS_URL=redis://default:<password>@<redis-host>:6379
AEX_REDIS_RATE_LIMIT_PREFIX=aex:ratelimit
AEX_REDIS_LOCK_PREFIX=aex:lock

# API/Admission
AEX_API_AUTH_REQUIRED=1
AEX_DEFAULT_FAIL_OPEN=0
AEX_SERIALIZABLE_RETRY_MAX=5
AEX_ADMISSION_TIMEOUT_MS=2500
AEX_PROVIDER_TIMEOUT_MS=30000
AEX_WEBHOOK_TIMEOUT_MS=5000

# Worker
AEX_WORKER_POLL_INTERVAL_MS=250
AEX_WORKER_BATCH_SIZE=100
AEX_WORKER_LEASE_SECONDS=30
AEX_WORKER_MAX_ATTEMPTS=20

# Admin
AEX_ADMIN_REQUIRE_MTLS=0
AEX_ADMIN_JWT_ISSUER=https://auth.example.com
AEX_ADMIN_JWT_AUDIENCE=aex-admin

# SDK defaults
AEX_ENABLE=1
AEX_MODE=proxy
AEX_BASE_URL=https://aex-cloud.app
