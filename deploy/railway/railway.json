{
  "$schema": "https://railway.app/railway.schema.json",
  "deploy": {
    "healthcheckTimeout": 120,
    "restartPolicyType": "on_failure",
    "restartPolicyMaxRetries": 10
  },
  "services": [
    {
      "name": "aex-api",
      "source": {
        "rootDirectory": "."
      },
      "build": {
        "builder": "NIXPACKS"
      },
      "deploy": {
        "startCommand": "uvicorn aex.api.main:app --host 0.0.0.0 --port $PORT",
        "healthcheckPath": "/health",
        "numReplicas": 3
      }
    },
    {
      "name": "aex-settlement-worker",
      "source": {
        "rootDirectory": "."
      },
      "build": {
        "builder": "NIXPACKS"
      },
      "deploy": {
        "startCommand": "python -m aex.workers.settlement",
        "numReplicas": 2
      }
    },
    {
      "name": "aex-admin-api",
      "source": {
        "rootDirectory": "."
      },
      "build": {
        "builder": "NIXPACKS"
      },
      "deploy": {
        "startCommand": "uvicorn aex.admin.main:app --host 0.0.0.0 --port $PORT",
        "healthcheckPath": "/health",
        "numReplicas": 2
      }
    },
    {
      "name": "aex-dashboard",
      "source": {
        "rootDirectory": "."
      },
      "build": {
        "builder": "NIXPACKS"
      },
      "deploy": {
        "startCommand": "python -m aex.frontend.serve",
        "healthcheckPath": "/",
        "numReplicas": 1
      }
    }
  ]
}
